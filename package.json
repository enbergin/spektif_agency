{
  "name": "spektif-agency",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push": "turbo db:push",
    "db:generate": "turbo db:generate",
    "db:seed": "cd apps/api && bun run db:seed",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.0",
    "turbo": "^1.13.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.0"
}
