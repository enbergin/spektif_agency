S3_SECRET_KEY="your-r2-secret-key"
S3_BUCKET="spektif-attachments"
S3_REGION="auto"

# Option 2: Backblaze B2 (Ultra cheap: $0.005/GB)
# B2_APPLICATION_KEY_ID="your-b2-key-id"
