# Monitoring - Free options
# Sentry (Free: 5k errors/month)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Uptime monitoring
UPTIME_ROBOT_API_KEY="your-uptimerobot-api-key"

# Production deployment
NODE_ENV="production"
PORT="3001"

# Scale configuration (based on requirements)
MAX_CONCURRENT_USERS="120"     # 60 employees + 60 clients max online
MAX_TOTAL_IMAGES="5000"        # Total images in system
MAX_ORG_SIZE="60"              # Max employees per organization

# Rate limiting (adjusted for scale)
RATE_LIMIT_WINDOW="60000"      # 1 minute
RATE_LIMIT_MAX="200"           # 200 requests per minute per IP (higher for active users)

# File upload limits (optimized for images)
MAX_FILE_SIZE="10485760"       # 10MB for images (sufficient for high-quality images)
MAX_FILES_PER_UPLOAD="5"       # 5 files at once
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,image/gif,application/pdf" # Images + PDF

# WebSocket limits
MAX_SOCKET_CONNECTIONS="150"   # Slightly higher than max users for safety
SOCKET_HEARTBEAT_INTERVAL="30000" # 30 seconds

# Database connection limits (for this scale)
DB_MAX_CONNECTIONS="20"        # Sufficient for 120 concurrent users
DB_CONNECTION_TIMEOUT="30000"  # 30 seconds
